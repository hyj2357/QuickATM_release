.top{
  z-index:1;
  background:url("../image/1403070516.png") center no-repeat;
  /** background-size:100% 1000px; **/
  background-size:100% 100%;
  background-position:50% 0%;
  width:100%;
  height:1000px;
}

.blackPurdah{
  z-index:2;
  background:#000000;
  width:100%;
  height:100%;
  opacity:0.3;
}

.name{
  position: absolute;
  z-index: 3;
  color: #FF9900;
  width: 600px;
  font-size: 64px;
  height: 120px;
  top: 30%;
  left: 36.5%;
  font-family:SHSCN-Bold;
}

.topButton{
  position: absolute;
  z-index:3;
  border-color:#FF9900;
  border-width:2px;
