<?xml version="1.0" encoding="gb2312"?>
<!-- 指定Hiberante3映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--上面四行对所有的hibernate映射文件都相同 -->

<!-- hibernate-mapping是映射文件的根元素 -->
<hibernate-mapping package="com.quickpayatm.domain">
   <class name="Balance" table="balance">
      <id name="id" type="int" length="10"><generator class="identity"/></id>   
      <property name="balance" type="double"/>
      
      <one-to-one name="maccount" class="Account" constrained="true"></one-to-one>                              
   </class> 
   
   <sql-query name="findById_query">
       <return-scalar column="id" type="int"/>
       <return-scalar column="balance" type="double"/>
       SELECT id,balance
       FROM balance bl
       WHERE bl.account=?;
   </sql-query>
       
</hibernate-mapping>